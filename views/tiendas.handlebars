<h5>Filtrar Resultados: </h5>
<form action='/tiendas' method="GET">
  <div class="row">
    <div class="col">
      <div class="form-group">
        <label for="comuna">Comuna</label>
        <select class="form-control" id="comuna" name="comuna">
          <option value="">Todas</option>
          <option>Santiago</option>
          <option>Las Condes</option>
          <option>asd</option>
        </select>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label for="region">Región</label>
        <select class="form-control" id="region" name="region">
          <option value="">Todas</option>
          <option>Región Metropolitana</option>
          <option>asd</option>
        </select>
      </div>
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Filtrar</button>
    </div>
  </div>
</form>
<br />
{{#if empty}}
  <div class="alert alert-secondary">
    <p>No se encontraron resultados con los filtros usados</p>
  </div>
{{/if}}
<table class="table table-hover">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Tienda</th>
      <th>Calle</th>
      <th>Comuna</th>
      <th>Region</th>
      <th>Telefono</th>
    </tr>
  </thead>
  <tbody>
    {{#each store}}
    <tr>
      <td><a href="https://{{this.website}}">{{this.brand_name}}</a></td>
      <td>{{this.location_name}}</td>
      <td>{{this.address_street}}</td>
      <td>{{this.address_commune}}</td>
      <td>{{this.address_region}}</td>
      <td>{{this.phone1}}</td>
    </tr>
    {{/each}}
   <tbody>
</table>