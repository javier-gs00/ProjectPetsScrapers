<h2>Editar Usuario: {{user.username}}</h2>
<h3 class="text-muted">ID: {{user._id}}</h3>
<br />
<div class="container">

    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger" role="alert">
                {{ this.msg }}
            </div>
        {{/each}}
    {{/if}}

    {{!-- Used for when first requesting the form. The user will the property ._id. --}}
    {{#if user._id}}
        <form method="POST" action="/admin/usuarios/editar/{{user._id}}">
            <input type="hidden" name="_method" value="PUT">
            {{> user}}
        </form>

        <form method="POST" action="/admin/usuarios/eliminar/{{user._id}}">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger" type="submit">Eliminar</button>
        </form>
        <br />

    {{!-- If there is a failed attempt, user._id will no longer exist and instead id will be passed by the controller (editar_put.js)  --}}
        {{else}}
        <form method="POST" action="/admin/usuarios/editar/{{id}}">
            <input type="hidden" name="_method" value="PUT">
            {{> user}}
        </form>

        <form method="POST" action="/admin/usuarios/eliminar/{{id}}">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger" type="submit">Eliminar</button>
        </form>

    {{/if}}
</div>