<form method="POST" action="/usuarios/login">
  <div class="form-group">
    <label for="username">Nombre de usuario</label>
    <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese nombre de usuario">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
  </div>
  <div class="form-row align-items-center">
    <div class="col-auto">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </div>
    </div>
    <div class="col-auto">
        <div class="col-sm-10">
            <a href="/usuarios/login" class="btn btn-danger" role="button">Cancelar</a>
        </div>
    </div>
  </div>
</form>
