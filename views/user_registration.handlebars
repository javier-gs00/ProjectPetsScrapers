<div class="container">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">
                {{this.msg}}
            </div>
        {{/each}}
    {{/if}}


    <form method="POST" action="/usuarios/registrar">
        {{> user}}
        <div class="form-row">
            <div class="col-auto">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                </div>
            </div>
            <div class="col-auto">
                <div class="col-sm-10">
                    <a href="/usarios/login" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
</div>