<h2>Agregar nueva tienda: </h2>
<br />
<div class="container">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger" role="alert">
                {{ this.msg }}
            </div>
        {{/each}}
    {{/if}}
    <form method="POST" action="/admin/tiendas/agregar">
        {{> storeform}}
    </form>
</div>